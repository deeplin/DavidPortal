@model DavidCore.Models.Hospital

<div class="well">
    <h3>
        <strong>@Model.HospitalId&nbsp;:&nbsp;@Model.HospitalName</strong>
    </h3>
    <h3>
        @Model.ContactName
        <span class="pull-right label label-primary">@Model.ContactPhone</span>
        <span class="pull-right label label-primary">@Model.ContactMobile</span>
    </h3>
    @using (Html.BeginForm("Delete", "Hospital", FormMethod.Get))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.HospitalId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="删除" />
        </div>
    }
    @using (Html.BeginForm("Edit", "Hospital", FormMethod.Get))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.HospitalId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="编辑" />
        </div>
    }
    <h3>
        <span class="lead"> &nbsp;@Model.HospitalAddress </span>
    </h3>
</div>